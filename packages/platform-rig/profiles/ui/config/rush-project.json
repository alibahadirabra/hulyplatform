{
  "incrementalBuildIgnoredGlobs": [
    "temp/**", 
    "dist_cache/**", 
    "coverage/**",
    "**/*.svelte",
    ".build/**"
  ],
  "disableBuildCacheForProject": false,

  "operationSettings": [
    {
      "operationName": "build",
      "outputFolderNames": ["lib", "dist_cache"]
    },
    {
      "operationName": "test",
      "outputFolderNames": ["coverage"]
    },
    {
      "operationName": "build:watch",
      "outputFolderNames": ["lib", "dist_cache"]
    }
  ]
}